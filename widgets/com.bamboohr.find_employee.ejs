                    //         console.log('newValue',newValue);
                    //         console.log('origJQElement',origJQElement);
                    //     },
                    //     searchPre: function(newValue, origJQElement) {
                    //         console.log('***** searchPre *****');
                    //         console.log('newValue',newValue);
                    //         console.log('origJQElement',origJQElement);
                    //     },
                    //     search: function (qry, callback) {
                    //         console.log('***** search *****');
                    //         console.log('qry',qry);

                    //         // filter the pre-cached list of employees
                    //         // const filtered = employees.filter( e => e.displayName.toLowerCase().includes(qry.toLowerCase()) );
                    //         // callback(filtered)
                    //     },
                    //     searchPost: function(resultsFromServer, origJQElement) {
                    //         console.log('***** searchPost *****');
                    //         console.log('resultsFromServer',resultsFromServer);
                    //         console.log('origJQElement',origJQElement);
                    //     }
                    // }
                });

                /* when a select-list option has been chosen, save the JSON to the "selectedEmployee" element */
                $('.basicAutoComplete').on('autocomplete.select', function (evt, item) {
                    console.log('***** autocomplete.select *****');
                    // console.log('item',item)
                    // $('#selectedEmployee').html(item?JSON.stringify(item):'null');

                    var msg = {
                        valid: true,
                        value: `${item.id}:${item.displayName}`
                        // value: item?JSON.stringify(item):'null'
                    }
                    console.log('msg',msg)

                    // send value to JotForm
                    JFCustomWidget.sendData(msg);
                });

            });
